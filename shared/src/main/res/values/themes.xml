<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Clean.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryLight</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="toolbarStyle">@style/Clean.Theme.Toolbar</item>
        <item name="radioButtonStyle">@style/Clean.Theme.RadioButton</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/font_regular</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:windowAnimationStyle">@style/Clean.Theme.WindowAnimationTransition</item>
        <item name="windowActionBar">false</item>
        <item name="bottomSheetDialogTheme">@style/Clean.Theme.BottomSheetDialogTheme</item>
        <item name="windowNoTitle">true</item>
        <item name="popupMenuStyle">@style/Clean.Theme.BasePopupMenu</item>
        <item name="materialAlertDialogTheme">@style/Clean.Theme.MaterialDialog</item>
    </style>

    <style name="Clean.Theme.WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!--Bottom Sheet Dialog Theme-->
    <style name="Clean.Theme.BottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetStyle">@style/Clean.Theme.BaseBottomSheetDialog.Style</item>
    </style>

    <!--Bottom Sheet Dialog Theme-->
    <style name="Clean.Theme.BaseBottomSheetDialog.Style" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/all_background_bottom_dialog</item>
    </style>

    <style name="Clean.Theme.BasePopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Clean.Theme.MaterialDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/Clean.Theme.MaterialDialog.Shape</item>
    </style>

    <style name="Clean.Theme.MaterialDialog.Shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Clean.Theme.Splash" parent="Clean.Theme">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryVariant">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <style name="Clean.Theme.FullScreen" parent="Clean.Theme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Clean.Theme.Transparent" parent="Clean.Theme">
        <item name="android:background">#8C000000</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">#8C000000</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Clean.Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Clean.Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>